<div id='login'>
  <h1 style='color: blue'>Login</h1>
  <br />
  <form method='post' id='form-login' action='/login'>
    <div class='form-group'>
      <label for='username'><b>Email</b></label>
      <input id='username' class='form-control' type='text' name='username' />
    </div>
    <div class='form-group'>
      <label for='password'><b>Password</b></label>
      <input
        id='password'
        class='form-control'
        type='password'
        name='password'
      />
    </div>
    <button type='submit' class='btn btn-success mt-3 mb-5'>
      Enviar
    </button>
  </form>
  <button
    type='button'
    class='btn btn-success mt-3 mb-5'
    onclick="document.getElementById('registro').style.display='block'; document.getElementById('login').style.display='none'"
  >
    Registro
  </button>
</div>

<div id='registro' style='display: none;'>
  <h1 style='color: blue'>Registro</h1>
  <br />
  <form method='post' id='form-registro' action='/registro'>
    <div class='form-group'>
      <label for='username'><b>Email</b></label>
      <input id='username' class='form-control' type='text' name='username' />
    </div>
    <div class='form-group'>
      <label for='password'><b>Password</b></label>
      <input
        id='password'
        class='form-control'
        type='password'
        name='password'
      />
    </div>
    <button type='submit' class='btn btn-success mt-3 mb-5'>
      Enviar
    </button>
  </form>
  <button
    type='button'
    class='btn btn-success mt-3 mb-5'
    onclick="document.getElementById('login').style.display = 'block'; document.getElementById('registro').style.display = 'none'"
  >
    Login
  </button>
</div>